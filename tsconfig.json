{
  "compilerOptions": {
    "declaration": true,
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "skipLibCheck": true,
  },
  "rootDir": "lib/",
  "include": [
    "lib/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}